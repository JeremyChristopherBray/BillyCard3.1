<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--2-col"></div>
  <div class="mdl-cell mdl-cell--8-col">
    <div class="login-card mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h1 class="mdl-card__title-text">LOGIN</h1>
      </div>
      <div class="mdl-card__supporting-text">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, class:'mdl-textfield__label' %>
              <%= f.email_field :email, autofocus: true, class:'mdl-textfield__input' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password, class:'mdl-textfield__label' %>
        <%= f.password_field :password, autocomplete: "off", class:'mdl-textfield__input' %>
            </div>
            <% if devise_mapping.rememberable? -%>
                <%= f.label :remember_me, class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
                    <%= f.check_box :remember_me, class:'mdl-checkbox__input' %>
                    <span class="mdl-checkbox__label">Remember Me</span>
                <% end %>
            <% end -%>
            <div class="mdl-card__actions mdl-card--border mdl-grid">
              <div class='md'>
              <%= f.submit 'Login', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
              </div>
            </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>