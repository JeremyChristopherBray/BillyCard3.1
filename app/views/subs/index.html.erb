<p id="notice"><%= notice %></p>

<h1>Subscriptions</h1>
<% if current_user.subs.any? %>
<table class="mdl-data-table mdl-js-data-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Frequency</th>
      <th>Amount</th>
      <th>Annual Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subs.each do |sub| %>
      <tr>
        <td><%= sub.name %></td>
        <td><%= sub.description %></td>
        <td><%= sub.frequency %></td>
        <td><%= number_to_currency(sub.amount, unit: "$") %></td>
        <td><%= sub.annual_cost %></td>
        <td><%= link_to 'Show', sub %></td>
        <td><%= link_to 'Edit', edit_sub_path(sub) %></td>
        <td><%= link_to 'Destroy', sub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td><%= number_to_currency(@monthly_subs, unit: "$") %></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </tfoot>
</table>

<br>

<%= link_to 'New Sub', new_sub_path %>
<% else %>
  You have no Subscriptions, better
  <%= link_to new_sub_path, class: 'mdl-button mdl-js-button mdl-button--fab mdl-button--colored' do %>
    <i class="material-icons">add</i>
    <% end %>
  one.
<% end %>