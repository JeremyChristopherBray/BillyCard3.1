<!-- Always shows a header, even in smaller screens. -->
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <% if user_signed_in? %>
            <!-- Title -->
            <%= link_to 'BillyCard', root_path, class: 'mdl-layout-title' %>
            <!-- Add spacer, to align navigation to the right -->
            <div class="mdl-layout-spacer"></div>
            <!-- Navigation. We hide it in small screens. -->
          <nav class="mdl-navigation mdl-layout--large-screen-only">
            <%= link_to pages_dashboard_url, class: 'mdl-navigation__link'  do %>
              <i id="tt1" class="material-icons">dashboard</i>
              <div class="mdl-tooltip" data-mdl-for="tt1">
                Dashboard
              </div>
            <% end %>
            <% if false %>
              <%= link_to accounts_path, class: 'mdl-navigation__link'  do %>
                <i id="tt2" class="material-icons">account_balance</i>
                <div class="mdl-tooltip" data-mdl-for="tt2">
                  Accounts - Coming Soon!
                </div>
              <% end %>
            <% end %>
            <%= link_to incomes_path, class: 'mdl-navigation__link' do %>
              <i id="tt2a" class="material-icons">attach_money</i>
              <div class="mdl-tooltip" data-mdl-for="tt2a">
                Income
              </div>
            <% end %>
            <%= link_to expenses_path, class: 'mdl-navigation__link' do %>
              <i id="tt2b" class="material-icons">money_off</i>
              <div class="mdl-tooltip" data-mdl-for="tt2b">
                Expenses
              </div>
            <% end %>
            <%= link_to credit_cards_path , class: 'mdl-navigation__link'  do %>
              <i id="tt3" class="material-icons">credit_card</i>
              <div class="mdl-tooltip" data-mdl-for="tt3">
                Credit Cards
              </div>
            <% end %>
            <%= link_to subs_path , class: 'mdl-navigation__link' do %>
              <i id="tt4" class="material-icons">autorenew</i>
              <div class="mdl-tooltip" data-mdl-for="tt4">
                Subscriptions
              </div>
            <% end %>
            <%= link_to '', class: 'mdl-navigation__link', id:'demo-menu-lower-left' do %>
              <i id="tt5" class="material-icons">account_circle</i>
              <div class="mdl-tooltip" data-mdl-for="tt5">
                Account
              </div>
            <% end %>
            <i id="tt6" class="material-icons">priority_high</i>
            <div class="mdl-tooltip" data-mdl-for="tt6">
              Notifications
            </div>
          </nav>
      <% else %>
                  <!-- Title -->
                  <%= link_to 'BillyCard', root_path, class: 'mdl-layout-title' %>
                  <!-- Add spacer, to align navigation to the right -->
                  <div class="mdl-layout-spacer"></div>
                  <!-- Navigation. We hide it in small screens. -->
                  <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <li>Pricing</li>
                  <%= link_to 'Log In', new_user_session_path, class: 'mdl-navigation__link' %>
                  <%= link_to 'Sign Up', new_user_registration_path, class: 'mdl-navigation__link' %>
                  </nav>
              <% end %>
    </div>
    <ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect"
        for="demo-menu-lower-left">
      <li class="mdl-menu__item">Dashboard</li>
      <li class="mdl-menu__item mdl-menu__item--full-bleed-divider"><%= link_to 'Edit Profile', edit_user_registration_path, class: '' %></li>

      <li class="mdl-menu__item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    </ul>
  </header>
  <div class="mdl-layout__drawer">
    <%= link_to 'BillyCard', root_path, class: 'mdl-layout-title' %>
    <nav class="mdl-navigation">
      <% if user_signed_in? %>
        <% if response.code.to_i != 404 %>
          <%= button_tag current_user.firstName, class: 'mdl-navigation__link', id:'demo-menu-lower-left' %>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'mdl-navigation__link' %>
          <%= link_to 'New Card', new_credit_card_path, class: 'mdl-navigation__link' %>
          <%= link_to 'All Cards', credit_cards_path, class: 'mdl-navigation__link' %>
          <%= link_to 'New Subscription', new_sub_path, class: 'mdl-navigation__link' %>
          <%= link_to 'All Subscriptions', subs_path, class: 'mdl-navigation__link' %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'mdl-navigation__link' %>
        <% else %>
          <%= button_tag image_tag(avatar_url(current_user), class: 'avatar', id:'demo-menu-lower-left') %>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'mdl-navigation__link' %>
          <%= link_to 'New Card', new_credit_card_path, class: 'mdl-navigation__link' %>
          <%= link_to 'All Cards', credit_cards_path, class: 'mdl-navigation__link' %>
          <%= link_to 'New Subscription', new_sub_path, class: 'mdl-navigation__link' %>
          <%= link_to 'All Subscriptions', subs_path, class: 'mdl-navigation__link' %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'mdl-navigation__link' %>

        <% end %>
      <% else %>
          <%= link_to 'Log In', new_user_session_path, class: 'mdl-navigation__link' %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'mdl-navigation__link' %>
      <% end %>
    </nav>
  </div>
