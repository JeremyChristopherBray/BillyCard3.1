<h1>Expenses</h1>

Annually
<br>
<table class="mdl-data-table mdl-js-data-table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Amount</th>
  </tr>
  </thead>

  <tbody>
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.name %></td>
      <td><%= number_to_currency(expense.annual_expense, unit: "$") %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

